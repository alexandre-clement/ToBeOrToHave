<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/item_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/item_description"
        android:layout_toEndOf="@+id/item_image"/>

    <TextView
        android:id="@+id/item_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/item_description"
        android:layout_above="@+id/item_price"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/item_description"
        android:layout_toEndOf="@+id/item_description"/>

    <TextView
        android:id="@+id/item_description"
        android:layout_width="200dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/item_image"/>

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/item_image_descr"/>


</RelativeLayout>